<h1>Gameplay</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Context-Specific Approach</th>
            <th scope=" col">Description</th>
        </tr>
    </thead>
    <tbody>
        {{#gameplay}}
            <tr>
                <th scope="row" colspan="2">{{category_name}}</th>
            </tr>
            {{#items}}
                <tr>
                    <td scope="row"><em>{{name}}</em></td>
                    <td>{{description}}</td>
                </tr>
            {{/items}}
        {{/gameplay}}
    </tbody>
</table>