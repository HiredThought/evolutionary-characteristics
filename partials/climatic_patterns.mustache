<h1>Climatic Patterns</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col" style="min-width: 200px;">Pattern</th>
            <th scope=" col">Description</th>
        </tr>
    </thead>
    <tbody>
        {{#climatic_patterns}}
            <tr>
                <th scope="row" colspan="2">{{category_name}}</th>
            </tr>
            {{#items}}
                <tr>
                    <td scope="row"><em>{{name}}</em></td>
                    <td>{{description}}</td>
                </tr>
            {{/items}}
        {{/climatic_patterns}}
    </tbody>
</table>